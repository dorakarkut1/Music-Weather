#:import decision_maker decision.decision_maker 
<MyGrid>
	video: video
	pause: pause
	play: play
	GridLayout:
		rows:2
		size: root.width, root.height
		Video:
			id: video
			source: decision_maker()
			state:'play'
			options : {'eos': 'loop'}
			allow_stretch:True
		GridLayout:
			cols:2
			size_hint_y:None
			height:int(root.height)/10
			Button:
				id: play
				text: "PLAY"
				background_color:[0,0,0,1]
				size_hint_y:None
				height:int(root.height)/10
				on_press: root.press_play()
			Button:
				id:pause
				text: "PAUSE"
				background_color:[0,0,0,1]
				size_hint_y:None
				height:int(root.height)/10
				on_press: root.press_pause()
				
		